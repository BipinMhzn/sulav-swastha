<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sulavswastha.sulavswastha.DonateBlood"
    android:orientation="vertical"
    android:weightSum="1">

    <include
        layout="@layout/navigation_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/donate_blood" />

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:ems="20"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:layout_weight="0.08" />


        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText8"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Last Name"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText7"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Address"/>

        <EditText
            android:id="@+id/etBloodGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText5"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Blood Group" />

        <EditText
            android:id="@+id/etPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText2"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Phone Number (98XX XXXXXX)" />



        <Button
            android:id="@+id/btnRegister"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText3"
            android:layout_marginStart="153dp"
            android:layout_marginTop="28dp"
            android:background="#ea0000"
            android:text="Register" />
    <Button
        android:id="@+id/btnViewDonor"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText3"
        android:layout_marginStart="153dp"
        android:layout_marginTop="28dp"
        android:background="#ea0000"
        android:text="View Donors" />



</LinearLayout>